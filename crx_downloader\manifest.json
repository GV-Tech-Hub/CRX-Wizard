{
  "manifest_version": 3,
  "name": "CRX Extractor/Downloader",
  "version": "1.0.0",
  "description": "Download Chrome extensions (CRX) & Convert to ZIP format",
  "permissions": [
    "downloads",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "https://chromewebstore.google.com/*",
    "https://clients2.google.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/16.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    }
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  }
}